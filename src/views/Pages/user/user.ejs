<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        Final Node Project
    </title>
    <link rel="icon" href="/favicon.ico">
    <link href="/css/style.css" rel="stylesheet">
</head>

<body
    x-data="{ page: 'ecommerce', 'loaded': true, 'darkMode': true, 'stickyMenu': false, 'sidebarToggle': false, 'scrollTop': false }"
    x-init="
         darkMode = JSON.parse(localStorage.getItem('darkMode'));
         $watch('darkMode', value => localStorage.setItem('darkMode', JSON.stringify(value)))"
    :class="{'dark text-bodydark bg-boxdark-2': darkMode === true}">
    <!-- ===== Preloader Start ===== -->
    <div x-show="loaded"
        x-init="window.addEventListener('DOMContentLoaded', () => {setTimeout(() => loaded = false, 200)})"
        class="fixed left-0 top-0 z-999999 flex h-screen w-screen items-center justify-center bg-white dark:bg-black">
        <div class="h-16 w-16 animate-spin rounded-full border-4 border-solid border-primary border-t-transparent">
        </div>
    </div>

    <!-- ===== Preloader End ===== -->

    <!-- ===== Page Wrapper Start ===== -->
    <!-- <div class="flex h-screen overflow-hidden"> -->
    <!-- ===== Content Area Start ===== -->
    <div class="relative flex flex-1 flex-col overflow-y-auto overflow-x-hidden">
        <!-- ===== Header Start ===== -->
        <%- include('../../Partials/Header') %>
            <!-- ===== Header End ===== -->
            <!-- ===== Main Content Start ===== -->
            <main>
                <div class="mx-auto max-w-screen-2xl p-4 md:p-6 2xl:p-10">
                    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 md:gap-6 xl:grid-cols-4 2xl:gap-7.5">
                        <!-- Card Item Start -->
                        <% products.forEach(product=> { %>
                            <div
                                class="rounded-sm border border-stroke bg-white  px-7.5 py-6 shadow-default dark:border-strokedark dark:bg-boxdark ">
                                <div class="flex h-90 w-full justify-center ">
                                    <img src="/<%= product.productimage %>" alt="">
                                </div>
                                <div class="mt-4 flex items-end justify-between">
                                    <div>
                                        <h4 class="text-title-md font-bold text-black dark:text-white">
                                            <%= product.name%>
                                        </h4>
                                        <span class="text-sm font-medium">
                                            <%= product.description%>
                                        </span>
                                    </div>
                                    <span class="flex items-center gap-1 text-sm font-medium text-meta-3">
                                        Price : <%= product.price%>

                                    </span>
                                </div>
                                <div>
                                    <span class="text-sm font-medium">
                                        Item :
                                        <% if (product.subCategoryID) { %>
                                            <%= product.subCategoryID.name %>
                                                <% } %>
                                    </span>
                                </div>
                                <div>
                                    <span class="text-sm font-medium">
                                        Category :
                                        <% if (product.subCategoryID && product.subCategoryID.categoryID) { %>
                                            <%= product.subCategoryID.categoryID.name %>
                                                <% } %>
                                    </span>
                                </div>
                                <div class="mt-4">
                                    <a
                                        class="relative flex h-8.5 w-full px-5 items-center justify-center rounded-full border-[0.5px] border-stroke bg-gray hover:text-primary dark:border-strokedark dark:bg-meta-4 dark:text-white">
                                        Add to Cart
                                    </a>
                                </div>

                            </div>
                            <% }) %>
                    </div>
                </div>
            </main>
            <!-- ===== Main Content End ===== -->
    </div>
    <!-- ===== Content Area End ===== -->
    </div>
    <!-- ===== Page Wrapper End ===== -->
    <script defer src="/bundle.js"></script>
</body>

</html>